# Database
# NOTE: The password in DATABASE_URL must match POSTGRES_PASSWORD
# POSTGRES_PASSWORD is used by docker-compose.yml to configure the PostgreSQL container
DATABASE_URL=postgresql+asyncpg://ffbot:ffbot@postgres:5432/ffbot
POSTGRES_PASSWORD=your_database_password_here

# Redis
REDIS_URL=redis://redis:6379/0

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# API Keys
POLYGON_API_KEY=your_polygon_api_key_here

# Scan Cadence (minutes)
SCAN_CADENCE_HIGH=3
SCAN_CADENCE_MEDIUM=15
SCAN_CADENCE_LOW=60

# Logging
LOG_LEVEL=INFO

# Default Settings
DEFAULT_FF_THRESHOLD=0.20
DEFAULT_SIGMA_FWD_FLOOR=0.05
DEFAULT_MIN_OPEN_INTEREST=100
DEFAULT_MIN_VOLUME=10
DEFAULT_MAX_BID_ASK_PCT=0.08
DEFAULT_STABILITY_SCANS=2
DEFAULT_COOLDOWN_MINUTES=120
DEFAULT_TIMEZONE=America/Vancouver

# JWT Configuration (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Registration Control (set to false to disable new user registrations)
REGISTRATION_ENABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Backend Configuration
BACKEND_URL=http://localhost:8000

# Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://bepo:3000
